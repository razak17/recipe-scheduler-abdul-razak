{
	"compilerOptions": {
		"target": "es2020",
		"module": "commonjs",
		"outDir": "build",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"baseUrl": ".",
		"paths": {
			"@shared": ["../shared/src/index.ts"]
		}
	},
	"exclude": ["node_modules", "build", "**/*.test.ts"],
	"include": ["src/**/*", "../shared/src"]
}
